      "type": "recruitment",
      "data": {
        "candidate_name": "{candidate_name}",
        "specialism": "{specialism}",
        "alpha_display": "{alpha_display}",
        "beta": "{beta}",
        "last_drawdown": "{last_drawdown}",
        "lifetime_pnl": "{lifetime_pnl}",
        "signing_bonus": "{signing_bonus}",
        "salary": "{salary}",
        "pnl_cut": "{pnl_cut}",
        "bio": "{bio}"
      }
    },
    "active": true
  },
